@model ProyectoATECA.Models.LoginUsuario
@{
    /**/

    ViewBag.Title = "Login";






}
<head>
    <link rel="stylesheet"
          type="text/css"
          href="~/Content/custom.css" />
    <style>
        #comboR {
            display: none;
        }
    </style>

</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <br>
                <img src="~/Img/ccsslogo2.png" id="icon" alt="icon" />
            </div>
            <!-- Login Form -->
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @if (ViewBag.Message != "")
                {
                    <div class="text-danger" data-toggle="tooltip" data-placement="right" title="" data-original-title="Tooltip on right">@ViewBag.Message</div>
                }
                <div class="form-group">
                    <div class=" col-md-12">
                        @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Correo", @id = "correo", @onkeyup = "verificar();" } })
                        @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <div class=" col-md-12" style="display:none;" id="division">
                        @Html.DropDownListFor(model => model.servicio, new List<SelectListItem> {
                  new SelectListItem{ Text = "Ordenes Patronales", Value = "1", Selected = true},
                  new SelectListItem{ Text = "Aseguramientos", Value = "2"},
                  new SelectListItem{ Text = "Pensiones", Value = "3"},
                  new SelectListItem{ Text = "Consultas", Value = "4"},
                  new SelectListItem{ Text = "Cobros", Value = "5"},
                      }
                  )
                    </div>
                </div>
                <br>
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.EditorFor(model => model.contraseña, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña" } })
                        @Html.ValidationMessageFor(model => model.contraseña, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br>
                <div class="form-group">
                    @Html.LabelFor(model => model.RememberMe, "Recordar", htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-3">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.RememberMe)
                            @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" value="Iniciar sesion" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <div>
                @Html.ActionLink("¿No tiene cuenta? Registrese aquí.", "Registration", "Usuarios")
            </div>
            <br>
        </div>
    </div>

    <script src="~/Scripts/traerRol.js"></script>

}
@section Scripts{


    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}