@model ProyectoATECA.Models.HistorialAtendido

@{
    ViewBag.Title = "Registro de atención";

    ViewBag.DefaultFicha = Request["ID_ficha"];
    ViewBag.CodigoFicha = Request["codigo"];

    ViewBag.DefaultServicio = Request["ID_servicio"];


}


<h2>Registro de atención</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Atendiendo a: </h4>
        <h4>Ficha: @ViewBag.CodigoFicha</h4>
        <h4>Caja: @ViewBag.DefaultServicio</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ID_servicio, "ID_servicio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_servicio, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.DefaultServicio, disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.ID_servicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_ficha, "ID_ficha", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_ficha, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.DefaultFicha, disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.ID_ficha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.horaInicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.horaInicio, new { @Value = ViewData["horaInicio"], htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.horaInicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.horaFin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.horaFin, new { @Value = ViewData["horaFin"], htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.horaFin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.duracion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.duracion, new { @Value = ViewData["duracion"], htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.duracion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.fecha, new { @Value = ViewData["fecha"], htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_usuario, "ID_usuario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_usuario", null, htmlAttributes: new { id = "UsuariosList", @class = "selectUsuarios show-tick form-control" })
                @Html.ValidationMessageFor(model => model.ID_usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index", "Fichas")
</div>

@section Scripts
{
    @*Scripts*@
    @Scripts.Render("~/Scripts/select.js")
    @Scripts.Render("~/Scripts/bootstrap-select.js")

    @*Styles*@
    @Styles.Render("~/Content/bootstrap-select.css")
} 