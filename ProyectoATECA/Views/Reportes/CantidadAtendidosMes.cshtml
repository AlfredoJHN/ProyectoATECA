@{
    ViewBag.Title = "Cantidad de atendidos por servicio";
}
<script src="~/Scripts/charts/exporting.js"></script>
<script src="~/Scripts/charts/highcharts.js"></script>


<div class="jumbotron">
    <div id="container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
</div>


<label>Mes</label>
<select class="form-control" id="mes" name="mes">
    <option>1</option>
    <option>2</option>
    <option>3</option>
    <option>4</option>
    <option>5</option>
    <option>6</option>
    <option>7</option>
    <option>8</option>
    <option>9</option>
    <option>10</option>
    <option>11</option>
    <option>12</option>
</select>
<label>Año</label>
<input type="number" id="year" name="year">
<button>Refrescar</button>


<script>


    $("button").click(function () {
        var mes = document.getElementById("mes").value;
        var year = document.getElementById("year").value;
        $.getJSON("/Reportes/GetAtendidosMes?mes="+mes+"&year="+year+"", function (data) {
            var Names = []
            var Qts = []
            for (var i = 0; i < data.length; i++) {
                Names.push(data[i].name);
                Qts.push(data[i].count);
            }
            Highcharts.chart('container', {
                chart: {
                    type: 'column'
                },
                title: {
                    text: 'Cantidad de atendidos en el mes '+mes+' del '+year+'.'
                },
                subtitle: {
                    text: 'CCSS'
                },
                xAxis: {
                    categories: Names
                },
                yAxis: {
                    title: {
                        text: 'Cantidad'
                    }
                },
                plotOptions: {
                    line: {
                        dataLabels: {
                            enabled: true
                        },
                        enableMouseTracking: false
                    }
                },
                series: [{
                    name: 'Atendidos',
                    data: Qts
                }]
            });
        });
    });

</script>