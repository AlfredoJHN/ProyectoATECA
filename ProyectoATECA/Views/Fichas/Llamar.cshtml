@model ProyectoATECA.Models.Ficha

@{
    ViewBag.Title = "Llamar";
    ViewData["llamado"] = "Si";

}

<h4>Llamar</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>¿Está seguro que desea llamar a esta ficha?</h2>
    <h2>@Model.codigoFicha.ToString()</h2>
    <h2>@Model.ID_servicio.ToString()</h2>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ID_servicio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID_servicio)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.codigoFicha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.codigoFicha)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.fecha)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>
    </dl>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_ficha)

    <div class="form-group" style="display:none">
        @Html.LabelFor(model => model.ID_servicio, "ID_servicio", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ID_servicio", null, htmlAttributes: new { @class = "form-control", })
        </div>
    </div>

    <div class="form-group" style="display:none">
        @Html.LabelFor(model => model.codigoFicha, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.codigoFicha, new { htmlAttributes = new { @class = "form-control", } })
        </div>
    </div>

    <div class="form-group" style="display:none">
        @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", } })
        </div>
    </div>

    <div class="form-group" style="display:none">
        @Html.LabelFor(model => model.atendido, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.atendido, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group" style="display:none">
        @Html.LabelFor(model => model.llamado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.llamado, new { @Value = ViewData["llamado"], htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>


    <div class="form-group" style="display:none">
        @Html.LabelFor(model => model.tipoFicha, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.tipoFicha, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Llamar" class="btn btn-default" />
        </div>
    </div>
</div>

}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
