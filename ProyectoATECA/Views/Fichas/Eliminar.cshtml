@model ProyectoATECA.Models.Ficha

@{
    ViewBag.Title = "Eliminar";
    ViewData["atendido"] = "No se presentó";
    ViewData["llamado"] = "Si";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

