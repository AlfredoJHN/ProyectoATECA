    <div class="alert alert-danger">
        <h1>¿Está seguro que desea eliminar esta ficha?</h1>
    </div>
    <div class="jumbotron">

        <div class="d-flex w-100 justify-content-between">
            <h2 class="mb-1">Ficha @Model.codigoFicha.ToString()</h2>
            <h5 class="text-muted">@Model.fecha</h5>
        </div>
        <hr class="my-3">
        <h2 class="mb-1">Caja</h2>
        <h3 class="text-muted">@Model.ID_servicio.ToString()</h3>

    </div>
    <br>
